extends ../layout

block style
  link(rel='stylesheet', type='text/css' href='../form.css')

block content
    h1 #{post['title']}
    h2 by #{post['username']}
    h3 date published: #{`${post['date'].day} ${post['date'].month} ${post['date'].year}`}
    h3 at #{`${post['date'].hours}:${post['date'].minutes}`}
    if post['imagePath']
      img(src=post['imagePath'])
    p #{post['text']}