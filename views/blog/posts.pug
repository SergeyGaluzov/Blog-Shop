extends ../layout

block style
  link(rel='stylesheet', type='text/css' href='../css/form.css')

block content
  each post in posts
    h1 
      a(href='/posts/' + post['_id']) #{post['title']}
    h2 by #{post['user']['username']}
    h3 date published: #{`${post['date'].day} ${post['date'].month} ${post['date'].year}`}
    h3 at #{`${post['date'].hours}:${post['date'].minutes}`}
    p #{post['text']}
    if post['imagePath']
      img(src="../" + post['imagePath'])
    hr