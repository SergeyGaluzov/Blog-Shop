extends ../layout

block style
  link(rel='stylesheet',type='text/css' href='/css/stylesheet/960.css')
  link(rel='stylesheet', type='text/css' href='/css/stylesheet/screen.css')
  link(rel='stylesheet', type='text/css' href='/css/main.css')
  link(rel='stylesheet', type='text/css' href='/css/stylesheet/color.css')

block content
  <div id="header" class="container_12">
      <div class="grid_12">
          <div id="cart_menu" class="s_nav">
              <a href="/shop/basket"><span class="s_icon"></span> <small class="s_text">Корзина</small><span class="s_grand_total s_main_color">0.00</span></a>
              <div class="s_submenu s_cart_holder">
                  <p class="s_mb_0">0 товаров</p>
              </div>
          </div>
      </div>
  </div>
  each product in products
    <div id="content" class="container_12">
        <div class="s_listing s_list_view clearfix">
            <div id="category" class="grid_9">
                <div class="s_listing s_list_view clearfix">
                    <div class="s_item clearfix">
                        <div class="grid_3 alpha"> <a class="s_thumb" href=""><img src="images/products/#{product['imagePath']}" title="Худи Kyiv Polytechnic Institute белое" alt="hudi1" /></a> </div>
                        <div class="grid_6 omega">
                            <h3>
                                a(href="/shop/product/" + product['_id']) #{product['name']}
                            </h3>
                            <p class="s_price">#{product['price']} грн.</p>
                            <p class="s_description">#{product['description']}</p>
                            a(class="s_button_add_to_cart" href="/shop/product/" + product['_id'] + "/add")
                                <span class="s_icon_16"><span class="s_icon"></span>Добавить в Корзину</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <div class="container-fluid">
      <div class="my_map">
          <div class="row">
              <div class="offset-lg-2 col-lg-8 main_text_on_page">где нас найти?</div>
          </div>
          <div class="row">
              <div class="col-lg-9">
                  <div style="overflow:hidden;width:100%;position: relative;">
                      <iframe width="100%" height="440" src="https://maps.google.com/maps?width=700&amp;height=440&amp;hl=en&amp;q=%D0%9A%D0%B8%D0%B5%D0%B2%2C%20%D0%BF%D1%80%D0%BE%D1%81%D0%BF%D0%B5%D0%BA%D1%82%20%D0%9F%D0%BE%D0%B1%D0%B5%D0%B4%D1%8B%2C%2037+(%D0%93%D0%B4%D0%B5%20%D0%BD%D0%B0%D1%81%20%D0%BD%D0%B0%D0%B9%D1%82%D0%B8%3F)&amp;ie=UTF8&amp;t=&amp;z=9&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><div style="position: absolute;width: 80%;bottom: 10px;left: 0;right: 0;margin-left: auto;margin-right:auto;color: #000;text-align: center;"><small style="line-height: 1.8;font-size: 2px;background: #fff;">Powered by <a href="https://embedgooglemaps.com/de/">embedgooglemaps DE</a> & <a href="https://iamsterdamcard.it">iamsterdamcard.it</a></small></div>
                      <style>
                          #gmap_canvas img {
                              max-width: none !important;
                              background: none !important; }
                      </style>
                  </div><br />
              </div>
              <div class="col-lg-2">
                  <h1 class="price">часы работы</h1>
                  <h1 class="price">пн-пт: 8:00-19:00</h1>
                  <h1 class="price">сб: 10:00-17:00</h1>
                  <h1 class="price">вс: выходной</h1>
              </div>
          </div>
      </div>
  </div>

